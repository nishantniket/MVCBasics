@model IEnumerable<MovieApp.Models.Movie>
@{

    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<a class="btn btn-primary" href="/Movies/Edit" id="login-form">New Movie</a>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Movies</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movie.Name, "Edit", "Movies" ,new {id = movie.Id},null)
            </td>
            <td>
                @movie.Genre.Name
            </td>
        </tr>
    }
    </tbody>
</table>

